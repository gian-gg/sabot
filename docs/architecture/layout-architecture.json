{
  "application": {
    "name": "P2P Transaction Verification App",
    "framework": "Next.js App Router",
    "rootLayout": "app/layout.tsx"
  },
  "routes": [
    {
      "path": "/",
      "name": "Home Dashboard",
      "file": "app/page.tsx",
      "authentication": "required",
      "layout": {
        "type": "full-page",
        "background": "gradient",
        "sections": [
          {
            "name": "Header",
            "type": "navigation",
            "position": "top",
            "components": ["BrandLogo", "UserProfileButton", "LogoutButton"]
          },
          {
            "name": "WelcomeSection",
            "type": "hero",
            "components": ["Heading", "Description"]
          },
          {
            "name": "TransactionsCard",
            "type": "content",
            "components": ["CardHeader", "TransactionList"]
          },
          {
            "name": "CreateButton",
            "type": "action",
            "position": "bottom-center"
          }
        ]
      },
      "navigation": [
        "/profile/[id]",
        "/transaction/[id]",
        "/transaction/new",
        "/login"
      ]
    },
    {
      "path": "/login",
      "name": "Login Page",
      "file": "app/login/page.tsx",
      "authentication": "public",
      "layout": {
        "type": "centered-card",
        "background": "gradient",
        "sections": [
          {
            "name": "LoginCard",
            "type": "form",
            "components": [
              "CardHeader",
              "EmailInput",
              "PasswordInput",
              "ForgotPasswordLink",
              "SubmitButton",
              "SignupLink",
              "DemoCredentialsNotice"
            ]
          }
        ]
      },
      "navigation": ["/", "/signup"]
    },
    {
      "path": "/signup",
      "name": "Signup Page",
      "file": "app/signup/page.tsx",
      "authentication": "public",
      "layout": {
        "type": "centered-card",
        "background": "gradient",
        "sections": [
          {
            "name": "SignupCard",
            "type": "form",
            "components": [
              "CardHeader",
              "NameInput",
              "EmailInput",
              "PasswordInput",
              "ConfirmPasswordInput",
              "IDUploadInput",
              "SubmitButton",
              "LoginLink"
            ]
          }
        ]
      },
      "navigation": ["/", "/login"]
    },
    {
      "path": "/profile/[id]",
      "name": "User Profile",
      "file": "app/profile/[id]/page.tsx",
      "authentication": "none",
      "dynamicSegments": ["id"],
      "layout": {
        "type": "full-page",
        "background": "gradient",
        "sections": [
          {
            "name": "Header",
            "type": "navigation",
            "components": ["BackButton"]
          },
          {
            "name": "ProfileHeaderCard",
            "type": "content",
            "components": [
              "Avatar",
              "UserName",
              "VerificationBadge",
              "Email",
              "StatsRow",
              "ActionButtons"
            ]
          },
          {
            "name": "TransactionHistoryCard",
            "type": "content",
            "components": ["CardHeader", "TransactionList", "EmptyState"]
          }
        ]
      },
      "navigation": ["/", "/emergency", "/transaction/[id]"]
    },
    {
      "path": "/emergency",
      "name": "Emergency Contact",
      "file": "app/emergency/page.tsx",
      "authentication": "required",
      "layout": {
        "type": "centered-form",
        "background": "gradient",
        "sections": [
          {
            "name": "Header",
            "type": "navigation",
            "components": ["BackButton"]
          },
          {
            "name": "EmergencyContactCard",
            "type": "form",
            "components": [
              "CardHeader",
              "NameInput",
              "PhoneInput",
              "RelationshipSelect",
              "InfoNotice",
              "SaveButton",
              "CancelButton",
              "SuccessState"
            ]
          }
        ]
      },
      "navigation": ["/"]
    },
    {
      "path": "/reports",
      "name": "Reports Dashboard",
      "file": "app/reports/page.tsx",
      "authentication": "required",
      "layout": {
        "type": "full-page",
        "background": "gradient",
        "sections": [
          {
            "name": "Header",
            "type": "navigation",
            "components": ["BackButton"]
          },
          {
            "name": "PageHeader",
            "type": "hero",
            "components": ["Title", "Description"]
          },
          {
            "name": "SummaryCardsGrid",
            "type": "stats",
            "components": ["PendingCard", "ReviewedCard", "ResolvedCard"]
          },
          {
            "name": "AllReportsCard",
            "type": "content",
            "components": ["CardHeader", "ReportsList", "EmptyState"]
          }
        ]
      },
      "navigation": ["/", "/transaction/[id]"]
    },
    {
      "path": "/transaction/new",
      "name": "Create Transaction (Multi-Step)",
      "file": "app/transaction/new/page.tsx",
      "authentication": "required",
      "layout": {
        "type": "wizard",
        "background": "gradient",
        "steps": [
          {
            "step": 1,
            "name": "UploadScreenshot",
            "components": [
              "StepHeader",
              "UploadCard",
              "FileInput",
              "DropZone",
              "InfoCard",
              "UploadButton"
            ]
          },
          {
            "step": 2,
            "name": "WaitingForOtherParty",
            "components": [
              "StepHeader",
              "ScreenshotConfirmCard",
              "InviteLinkCard",
              "CopyButton",
              "WaitingIndicator",
              "ProceedButton"
            ]
          },
          {
            "step": 3,
            "name": "Analyzing",
            "components": ["Spinner", "LoadingMessage"]
          },
          {
            "step": 4,
            "name": "Summary",
            "components": [
              "StepHeader",
              "VerificationCard",
              "AISummaryCard",
              "ActivateButton",
              "SecondaryButtons"
            ]
          }
        ],
        "sections": [
          {
            "name": "Header",
            "type": "navigation",
            "components": ["BackButton"]
          }
        ]
      },
      "navigation": ["/", "/transaction/[id]/active"]
    },
    {
      "path": "/transaction/invite",
      "name": "Transaction Invite (Verification Flow)",
      "file": "app/transaction/invite/page.tsx",
      "authentication": "required",
      "queryParams": ["data"],
      "layout": {
        "type": "wizard",
        "background": "gradient",
        "steps": [
          {
            "step": 1,
            "name": "ReviewInvitation",
            "components": [
              "StepHeader",
              "TransactionDetailsCard",
              "DetailBoxes",
              "SecurityInfoCard",
              "AcceptButton",
              "DeclineButton"
            ]
          },
          {
            "step": 2,
            "name": "UploadScreenshot",
            "components": [
              "StepHeader",
              "VerificationCard",
              "FileUploadZone",
              "ImportantNotice",
              "VerifyButton",
              "SkipButton"
            ]
          },
          {
            "step": 3,
            "name": "VerificationResults",
            "components": [
              "LoadingState",
              "StepHeader",
              "VerificationSummaryCard",
              "AIAnalysisCard",
              "ProceedButton"
            ]
          }
        ],
        "sections": [
          {
            "name": "Header",
            "type": "navigation",
            "components": ["BackButton"]
          }
        ]
      },
      "navigation": ["/", "/login", "/transaction/[id]"]
    },
    {
      "path": "/transaction/[id]",
      "name": "Transaction Detail",
      "file": "app/transaction/[id]/page.tsx",
      "authentication": "required",
      "dynamicSegments": ["id"],
      "layout": {
        "type": "full-page",
        "background": "gradient",
        "sections": [
          {
            "name": "Header",
            "type": "navigation",
            "components": ["BackButton"]
          },
          {
            "name": "StatusHeaderCard",
            "type": "content",
            "components": ["StatusIcon", "TransactionInfo", "StatusBadge"]
          },
          {
            "name": "ContentGrid",
            "type": "grid",
            "columns": 2,
            "components": ["TransactionDetailsCard", "ParticipantsCard"]
          },
          {
            "name": "VerificationStepsCard",
            "type": "content",
            "conditional": "status === 'pending'",
            "components": ["StepsList"]
          },
          {
            "name": "ActiveTransactionIndicator",
            "type": "content",
            "conditional": "status === 'active'",
            "components": ["AnimatedCircle", "StatusText"]
          },
          {
            "name": "ActionsCard",
            "type": "actions",
            "components": [
              "StartButton",
              "ConfirmButton",
              "WaitingIndicator",
              "ReportButton",
              "CompletionMessage"
            ]
          }
        ],
        "dialogs": [
          {
            "name": "ReportDialog",
            "trigger": "ReportButton",
            "components": ["ReasonSelect", "NotesTextarea", "SubmitButton"]
          }
        ]
      },
      "navigation": ["/", "/profile/[id]"],
      "stateTransitions": {
        "pending": ["active", "reported"],
        "active": ["completed", "reported"],
        "completed": [],
        "reported": []
      }
    },
    {
      "path": "/transaction/[id]/active",
      "name": "Active Transaction",
      "file": "app/transaction/[id]/active/page.tsx",
      "authentication": "required",
      "dynamicSegments": ["id"],
      "layout": {
        "type": "full-page",
        "background": "gradient",
        "sections": [
          {
            "name": "Header",
            "type": "navigation",
            "components": ["BackButton"]
          },
          {
            "name": "ActiveStatusBanner",
            "type": "hero",
            "prominence": "high",
            "components": [
              "AnimatedCircle",
              "PingRings",
              "PlayIcon",
              "StatusText",
              "BadgeRow"
            ]
          },
          {
            "name": "ContentGrid",
            "type": "grid",
            "columns": 2,
            "components": ["TransactionDetailsCard", "ParticipantsCard"]
          },
          {
            "name": "CompletionCard",
            "type": "actions",
            "components": ["ConfirmButton", "WaitingIndicator", "InfoNotice"]
          }
        ]
      },
      "navigation": ["/"]
    }
  ],
  "commonComponents": {
    "reusableUIComponents": [
      {
        "name": "Card",
        "file": "components/ui/card.tsx",
        "variants": [
          "Card",
          "CardHeader",
          "CardTitle",
          "CardDescription",
          "CardContent",
          "CardFooter"
        ],
        "usage": "Primary content container across all pages"
      },
      {
        "name": "Button",
        "file": "components/ui/button.tsx",
        "variants": [
          "default",
          "destructive",
          "outline",
          "secondary",
          "ghost",
          "link"
        ],
        "sizes": ["default", "sm", "lg", "icon"],
        "usage": "All interactive buttons"
      },
      {
        "name": "Input",
        "file": "components/ui/input.tsx",
        "types": ["text", "email", "password", "tel", "file"],
        "usage": "Form inputs across authentication and data entry pages"
      },
      {
        "name": "Label",
        "file": "components/ui/label.tsx",
        "usage": "Form field labels"
      },
      {
        "name": "Badge",
        "file": "components/ui/badge.tsx",
        "usage": "Status indicators (transaction status, verification status)"
      },
      {
        "name": "Avatar",
        "file": "components/ui/avatar.tsx",
        "variants": ["Avatar", "AvatarFallback"],
        "usage": "User profile displays"
      },
      {
        "name": "Textarea",
        "file": "components/ui/textarea.tsx",
        "usage": "Multi-line text inputs (report notes)"
      },
      {
        "name": "Dialog",
        "file": "components/ui/dialog.tsx",
        "variants": [
          "Dialog",
          "DialogContent",
          "DialogHeader",
          "DialogTitle",
          "DialogDescription",
          "DialogFooter"
        ],
        "usage": "Modal dialogs (report submission, confirmations)"
      }
    ],
    "layoutPatterns": [
      {
        "name": "PageWithHeader",
        "structure": "Header + Main Content",
        "pages": [
          "/",
          "/profile/[id]",
          "/emergency",
          "/reports",
          "/transaction/*"
        ]
      },
      {
        "name": "CenteredCard",
        "structure": "Full-height centered container with single card",
        "pages": ["/login", "/signup"]
      },
      {
        "name": "TwoColumnGrid",
        "structure": "Responsive grid (2 cols desktop, 1 col mobile)",
        "pages": ["/transaction/[id]", "/transaction/[id]/active"]
      },
      {
        "name": "MultiStepWizard",
        "structure": "Sequential step-based flow with state management",
        "pages": ["/transaction/new", "/transaction/invite"]
      }
    ],
    "themeElements": {
      "backgrounds": {
        "gradient": "blue-50 to indigo-100",
        "header": "white with shadow",
        "cards": "white with rounded corners and shadow"
      },
      "statusColors": {
        "completed": "green-100 / green-800",
        "active": "blue-100 / blue-800",
        "pending": "yellow-100 / yellow-800",
        "reported": "red-100 / red-800",
        "success": "green-50 / green-600",
        "info": "blue-50 / blue-600",
        "warning": "amber-50 / amber-600"
      },
      "animations": {
        "pulse": "Used for active states and loading",
        "ping": "Expanding rings for live indicators",
        "spin": "Loading spinners"
      }
    }
  },
  "navigationFlow": {
    "primaryFlows": [
      {
        "name": "CreateTransaction",
        "steps": [
          "/",
          "/transaction/new (step 1-4)",
          "/transaction/[id]/active",
          "/"
        ]
      },
      {
        "name": "AcceptInvitation",
        "steps": [
          "/transaction/invite?data=... (step 1-3)",
          "/transaction/[id]",
          "/transaction/[id]/active",
          "/"
        ]
      },
      {
        "name": "ViewAndCompleteTransaction",
        "steps": [
          "/",
          "/transaction/[id]",
          "Start → Active state",
          "Confirm → Completed",
          "/"
        ]
      },
      {
        "name": "ReportIssue",
        "steps": [
          "/transaction/[id]",
          "Open report dialog",
          "Submit report",
          "/reports"
        ]
      }
    ]
  },
  "dataRelationships": {
    "entities": [
      {
        "name": "User",
        "source": "data/users.json or created",
        "usedIn": ["/", "/profile/[id]", "/transaction/[id]", "/reports"]
      },
      {
        "name": "Transaction",
        "source": "data/transactions.json or created",
        "usedIn": [
          "/",
          "/profile/[id]",
          "/transaction/[id]",
          "/transaction/[id]/active",
          "/reports"
        ]
      },
      {
        "name": "Report",
        "source": "data/reports.json",
        "usedIn": ["/reports"]
      },
      {
        "name": "EmergencyContact",
        "source": "Global store",
        "usedIn": ["/emergency"]
      }
    ]
  },
  "stateManagement": {
    "store": "Zustand (lib/store.ts)",
    "globalState": [
      "currentUser",
      "activeTransaction",
      "emergencyContact",
      "createdTransactions"
    ],
    "persistence": "Client-side only (resets on refresh)"
  }
}
